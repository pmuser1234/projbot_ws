<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="startbot">
<material name="white">
    <color rgba="1 1 1 1"/>
</material>
<material name="red">
    <color rgba="1 0 0 1"/>
</material>
<material name="blue">
    <color rgba="0 0 1 1"/>
</material>
<material name="black">
    <color rgba="0 0 0 1"/>
</material>
<link name="base_link">
</link>
<joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0"/>
</joint>
<link name="chassis_link">
<visual>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
    <geometry>
    <box size="0.45 0.35 0.15"/>
    </geometry>
    <material name="white"/>
</visual>
</link>
<!--left wheel-->
<joint name="left_joint" type="continuous">
<parent link="chassis_link"/>
<child link="left_wheel"/>
<origin xyz="0 -0.2 0" rpy="${pi/2} 0 0"/>
<axis xyz="0 0 1"/>
</joint>
<link name="left_wheel">
<visual>
<geometry>
<cylinder length="0.06" radius="0.05"/>
</geometry>
<material name="blue"/>
</visual>
</link>
<!--right wheel-->
<joint name="right_joint" type="continuous">
<parent link="chassis_link"/>
<child link="right_wheel"/>
<origin xyz="0 0.2 0" rpy="-${pi/2} 0 0"/>
<axis xyz="0 0 -1"/>
</joint>
<link name="right_wheel">
<visual>
<geometry>
<cylinder length="0.06" radius="0.05"/>
</geometry>
<material name="blue"/>
</visual>
</link>
<joint name="fcaster_joint" type="fixed">
<parent link="chassis_link"/>
<child link="front_caster"/>
<origin xyz="0.175 0 0"/>
</joint>
<link name="front_caster">
<visual>
<geometry>
<sphere radius="0.05"/>
</geometry>
<material name="black"/>
</visual>
</link>
<joint name="bcaster_joint" type="fixed">
<parent link="chassis_link"/>
<child link="rear_caster"/>
<origin xyz="-0.175 0 0"/>
</joint>
<link name="rear_caster">
<visual>
<geometry>
<sphere radius="0.05"/>
</geometry>
<material name="black"/>
</visual>
</link>
</robot>